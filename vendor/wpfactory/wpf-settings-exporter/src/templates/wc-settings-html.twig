{% include 'html-header.twig' %}

<body>

{# Navigation #}
<div class="navigation">
	{% for section_id, settings_kit in full_settings %}
		{# Section #}
		<h4>{{ wpfse_section_label(section_id) }}</h4>
		<ul>
			{%- apply spaceless %}
				{% for setting in settings_kit %}
					{% if setting.type == 'title' and wpfse_option_attr(setting,'hide') != true %} {# Sub-section #}
						<li>
							<a href="#{{ wpfse_section_label(section_id) | sanitize }}-{{ setting.title | sanitize }}">{{ setting.title }}</a>
						</li>
					{% endif %}
				{% endfor %}
			{% endapply -%}
		</ul>
	{% endfor %}
</div>

{# <hr/> #}

{# Settings #}
{% for section_id, settings_kit in full_settings %}
	<div class="section">
		{%- apply spaceless %}
			{# <h4><i class="fa-solid fa-circle-chevron-right"></i> {{ wpfse_section_label(section_id) }}</h4> #} {# Section #}
			{#<hr/>#}

			{% for setting in settings_kit %}
				{% if wpfse_option_attr(setting,'hide') != true %}
					{% if setting.type == 'title' %} {# Sub-section #}
						<h4 id="{{ wpfse_section_label(section_id) | sanitize }}-{{ setting.title | sanitize }}">
							<i class="fa-solid fa-circle-chevron-right"></i> {{ wpfse_section_label(section_id) }}
							> {{ setting.title }}
						</h4>
						{% set opt_desc = wpfse_option_attr(setting,'desc') %}
						{% if opt_desc %}
							<p class="section-desc">{{ opt_desc | wpfse_remove_local_links }}</p>
						{% endif %}
						<dl>
					{% elseif setting.type!='sectionend' %}
						{% set title_desc = wpfse_option_attr(setting,'desc','desc_tip') %}
						{% set opt_desc_tip = wpfse_option_attr(setting,'desc_tip') %}
						<dt><strong>{{ wpfse_option_icon(setting) }} {{ wpfse_smart_opt(setting,'title') }} </strong>
							- {{ title_desc | wpfse_final_dot }}</dt>
						<dd>
							<ul>
								{% if opt_desc_tip not in title_desc %} {# Desc tip #}
									<li>{{ opt_desc_tip | wpfse_remove_local_links }}</li>
								{% endif %}
								{% if setting.options %} {# Available options #}
									<li>Available options:
										{% for option in setting.options %}
										<code>{{ option }}</code>{% if not loop.last %}, {% endif %}
										{%- endfor -%}.
									</li>
								{% endif %}
								{% if setting.default %} {# Default #}
									{% if setting.type=='select' and setting.default in setting.options|keys %}
										<li>Default value: <code>{{ setting.options[setting.default] }}</code>.</li>
									{% elseif setting.type=='multiselect' and setting.default is iterable %}
										<li>Default options:
											{% for default_value in setting.default %}
											{% if default_value in setting.options|keys %}
												<code>{{ setting.options[default_value] }}</code>{% if not loop.last %}, {% endif %}
											{% endif %}
											{%- endfor -%}.
										</li>
									{% else %}
										<li>Default value: <code>{{ setting.default | ucfirst }}</code>.</li>
									{% endif %}
								{% endif %}
							</ul>
						</dd>
					{% else %}
						</dl>
					{% endif %}
				{% endif %}
			{% endfor %}

		{% endapply -%}
	</div>
{% endfor %}


</body>
</html>